{
	"compilerOptions": {
		"baseUrl": "src",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"noUnusedLocals": true,
		"sourceMap": true,
		"strict": true,
		"types": ["node", "jest"],
    	"skipLibCheck": true,
	},
	"exclude": [
        "node_modules"
    ]
}